extends ../../Layout/default.pug
block main 
    h1(class="mb-4") #{titlePage}
    .card.mb-3 
        .card-header Danh Sách 
        .card-body
            .row 
                .col-8 
                .col-4.text-right
                    a(href="/admin/topics/create" class="btn btn-outline-success") +Thêm Mới 
        table(class="table table-hover table-sm")
            thead   
                tr 
                    th STT 
                    th Hình Ảnh 
                    th Tiêu Đề
                    th Trạng Thái
                    th Hành Động
            tbody  
                each item,index in topics 
                    tr 
                        td #{index +1}
                        td
                            img(src=item.avatar, alt="" width="100px" height ="auto")
                        td  #{item.title}
                        td  
                            if (item.status === "active")
                                a(href="javascript:;" class="badge badge-success") Hoạt động 
                            else 
                                a(href="javascript:;" class="badge badge-danger") Dừng Hoạt động 
                        td 
                            a( href=`/admin/topics/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
                            a(href=`admin/topics/edit/${item.id}`)  Sửa
                            button(class="btn btn-danger btn-sm ml-1" button-delete data-id=item.id)  Xóa
